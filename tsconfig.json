{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": ["./src/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
